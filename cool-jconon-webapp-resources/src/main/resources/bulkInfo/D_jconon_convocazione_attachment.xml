<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<bulkInfo 
	xmlns="http://www.cnr.it/schema/BulkInfo_v2" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	cmisQueryName="jconon_convocazione:attachment" 
	cmisTypeName="D:jconon_convocazione:attachment" 
	longDescription="Convocazione al colloquio" 
	shortDescription="Convocazione al colloquio" 
	xsi:schemaLocation="http://www.cnr.it/schema/BulkInfo_v2 BulkInfo_v2">
	<cmisImplementsName join="true" name="P:jconon_protocollo:common"/>

	<form name="search">
		<formFieldProperty 
			class="span12 criteria-like" 
			parentGroupClass="btn-group-vertical"
			default="%%" 
			name="stato" 
			property="doc.jconon_convocazione:stato" 
			widget="ui.radio">
			<jsonlist>
				<listElement defaultLabel="Tutte" key="%%" label="label.tutte"/>
				<listElement defaultLabel="Generate" key="GENERATO" label="label.generato"/>
				<listElement defaultLabel="Firmate" key="FIRMATO" label="label.firmato"/>
				<listElement defaultLabel="Spedite" key="SPEDITO" label="label.spedito"/>
				<listElement defaultLabel="Consegnate" key="CONSEGNATO" label="label.consegnato" class="btn-success"/>
				<listElement defaultLabel="Ricevute" key="RICEVUTO" label="label.ricevuto" class="btn-success"/>
			</jsonlist>
		</formFieldProperty>
		<formFieldProperty 
			class="criteria-equals input-small" 
			inputType="TEXT" 
			label="Numero" 
			name="numero_convocazione" 
			property="doc.jconon_convocazione:numero"/>
		<formFieldProperty 
			class="criteria-equals input-medium" 
			label="label.jconon_application_user" 
			name="user" 
			property="doc.jconon_attachment:user" 
			widget="ui.authority">
			<jsonsettings usersOnly="true"/><jsonvalidator/>
		</formFieldProperty>

	</form>
	<form name="firma">
		<formFieldProperty 
			inputType="TEXT" 
			label="label.account.userName" 
			name="userName" 
			property="userName">
			<jsonvalidator required="true"/>
		</formFieldProperty>
		<formFieldProperty 
			inputType="PASSWORD" 
			label="label.account.password" 
			name="password" 
			property="password">
			<jsonvalidator required="true"/>
		</formFieldProperty>
		<formFieldProperty 
			inputType="TEXT" 
			label="label.account.otp" 
			name="otp" 
			property="otp">
			<jsonvalidator required="true"/>
		</formFieldProperty>
		<formFieldProperty 
			inputType="TEXT" 
			label="label.account.testo" 
			name="firma" 
			property="firma">
		</formFieldProperty>
	</form>
	<form name="invia">
		<formFieldProperty 
			inputType="TEXT" 
			label="label.account.userName" 
			name="userNamePEC" 
			property="userNamePEC">
			<jsonvalidator required="true"/>
		</formFieldProperty>
		<formFieldProperty 
			inputType="PASSWORD" 
			label="label.account.password" 
			name="passwordPEC" 
			property="passwordPEC">
			<jsonvalidator required="true"/>
		</formFieldProperty>
        <formFieldProperty
                parentGroupClass="btn-group-vertical"
                default="DOC"
                class="span2"
                label="Spedisci all'indirizzo:"
                name="addressFromApplication"
                property="addressFromApplication"
                widget="ui.radio">
            <jsonlist>
                <listElement defaultLabel="PEC sul documento" key="DOC" label="label.invia.document"/>
                <listElement defaultLabel="PEC aggiornata" key="PEC" label="label.invia.application"/>
                <listElement defaultLabel="Email aggiornata" key="EMAIL" label="label.invia.application"/>
            </jsonlist>
            <jsonvalidator requiredWidget="true"/>
        </formFieldProperty>
	</form>
</bulkInfo>