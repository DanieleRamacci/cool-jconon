<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<bulkInfo xmlns="http://www.cnr.it/schema/BulkInfo_v2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" longDescription="Esclusione"
          shortDescription="Esclusione" xsi:schemaLocation="http://www.cnr.it/schema/BulkInfo_v2 BulkInfo_v2">

    <fieldProperty
            inputType="TEXT"
            class="btn-medium"
            default="FILTER"
            name="applicationFilter"
            property="applicationFilter"
            widget="ui.radio">
        <jsonlist>
            <listElement defaultLabel="Solo domande non ammesse" key="FILTER" label="label.domande.nonammesse"/>
            <listElement defaultLabel="Tutte le domande" key="ALL" label="label.appliaction.all"/>
        </jsonlist>
        <jsonlabel default="Filtra" key="label.esclusioni.per.selezione" />
    </fieldProperty>

    <fieldProperty 
        inputType="SELECT" 
        labelClass="control-label"
        name="application" 
        property="application" 
        multiple="multiple"
        widget="ui.select">
        <jsonlabel default="label.convocazioni.application" key="label.convocazioni.application" />
    </fieldProperty>

    <fieldProperty
            inputType="TEXT"
            class="btn-medium"
            parentGroupClass="btn-block"
            default="GENERA"
            name="esclusioniType"
            property="esclusioniType"
            widget="ui.radio">
        <jsonlist>
            <listElement defaultLabel="Genera esclusioni" key="GENERA" label="label.esclusioni.genera"/>
            <listElement defaultLabel="Genera esclusioni senza articolo" key="GENERA_SENZA_ARTICOLO" label="label.esclusioni.genera"/>
            <listElement defaultLabel="Carica provvedimento" key="UPLOAD" label="label.esclusioni.upload"/>
        </jsonlist>
    </fieldProperty>

    <fieldProperty
            inputType="TEXT"
            class="btn-medium btn-danger esclusioniType_UPLOAD"
            parentGroupClass="btn-block"
            default="RINUNCIA"
            name="tipo"
            property="tipo"
            widget="ui.radio">
        <jsonlist>
            <listElement defaultLabel="Rinuncia" key="RINUNCIA" label="label.esclusioni.rinuncia"/>
            <listElement defaultLabel="Esclusione" key="ESCLUSIONE" label="label.esclusioni.esclusione"/>
        </jsonlist>
        <jsonlabel default="Tipo" key="label.esclusioni.tipo" />
        <jsonvalidator requiredWidget="true"/>
    </fieldProperty>

    <fieldProperty
            inputType="TEXT"
            name="data"
            class="esclusioniType_UPLOAD"
            property="jconon_protocollo:data"
            widget="ui.datepicker">
        <jsonlabel default="Data Protocollo" key="label.jconon_protocollo_data"/>
        <jsonvalidator requiredWidget="true"/>
    </fieldProperty>

    <fieldProperty
            inputType="TEXT"
            name="numero"
            class="esclusioniType_UPLOAD"
            property="jconon_protocollo:numero"
            widget="ui.protocollo">
        <jsonlabel default="Numero Protocollo" key="label.jconon_protocollo.numero"/>
        <jsonvalidator requiredWidget="true"/>
    </fieldProperty>

    <fieldProperty
            inputType="FILE"
            name="file"
            class="esclusioniType_UPLOAD"
            property="file">
        <jsonlabel default="Provvedimento Firmato" key="label.provvedimento"/>
        <jsonvalidator required="true"/>
    </fieldProperty>

    <fieldProperty 
        inputType="TEXT" 
        class="btn-medium esclusioniType_GENERA"
        default="COLLOQUIO" 
        name="tipoSelezione" 
        property="tipoSelezione" 
        widget="ui.radio">
            <jsonlist>
                <listElement defaultLabel="Colloquio" key="COLLOQUIO" label="label.colloquio"/>
                <listElement defaultLabel="Prova scritta" key="PROVASCRITTA" label="label.scritto"/>
                <listElement defaultLabel="Prima prova scritta" key="PRIMAPROVASCRITTA" label="label.primoscritto"/>                
                <listElement defaultLabel="Seconda prova scritta" key="SECONDAPROVASCRITTA" label="label.secondoscritto"/>
                <listElement defaultLabel="Orale" key="ORALE" label="label.orale"/>                
            </jsonlist>
            <jsonlabel default="Escusione per la prova" key="label.esclusioni.per.selezione" />
    </fieldProperty>

    <fieldProperty 
        inputType="TEXT" 
        name="art" 
        class="input-medium esclusioniType_GENERA"
        property="art">
        <jsonvalidator required="true"/>
        <jsonlabel default="Art." key="label.esclusioni.art" />
    </fieldProperty>

    <fieldProperty 
        inputType="TEXT" 
        name="comma" 
        class="input-medium esclusioniType_GENERA"
        property="comma">
        <jsonvalidator required="true"/>
        <jsonlabel default="Comma" key="label.esclusioni.comma" />
    </fieldProperty>

    <fieldProperty 
        inputType="TEXTAREA" 
        label="label.convocazione.firma"
        name="firma" 
        property="firma">
        <jsonvalidator required="true"/>
    </fieldProperty>

    <fieldProperty 
        inputType="TEXTAREA" 
        label="label.convocazione.note"
        name="note"
        property="note"
        widget="ui.wysiwyg">
    </fieldProperty>

    <formFieldProperty name="applicationFilter"/>
    <formFieldProperty class="input-xxlarge" name="application"/>
    <formFieldProperty name="esclusioniType"/>
    <formFieldProperty name="tipo"/>
    <formFieldProperty name="data"/>
    <formFieldProperty name="numero"/>
    <formFieldProperty name="file"/>
    <formFieldProperty name="tipoSelezione"/>
    <formFieldProperty name="art"/>
    <formFieldProperty name="comma"/>
    <formFieldProperty class="input-xxlarge esclusioniType_GENERA esclusioniType_GENERA_SENZA_ARTICOLO" name="firma" rows="2"/>
    <formFieldProperty class="input-xxlarge esclusioniType_GENERA esclusioniType_GENERA_SENZA_ARTICOLO" parentClass="esclusioniType_GENERA esclusioniType_GENERA_SENZA_ARTICOLO" name="note" rows="5"/>

</bulkInfo>